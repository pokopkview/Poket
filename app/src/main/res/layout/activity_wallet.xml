<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="钱包"
        android:textSize="@dimen/sp24"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp12"
        android:layout_marginLeft="@dimen/dp12"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp30"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp12"
            android:orientation="horizontal"
            android:background="@color/gray_cc">

            <ImageView
                android:id="@+id/iv_head_icon"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_marginTop="@dimen/dp8"
                android:src="@drawable/touxiang01" />
            <TextView
                android:id="@+id/tv_walet_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp30"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp12"
                android:textColor="@color/black"
                android:text="nidsfj"/>

            <TextView
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp30"
                android:layout_marginLeft="@dimen/dp12"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/grassgreen"
                android:text="当前钱包"/>

            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
            <TextView
                android:gravity="right"
                android:text="%s\n%s"
                android:id="@+id/tv_addtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_walet_ad"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:background="@color/gray_cc"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp12"
            android:textColor="@color/black"
            android:text="niddsfsadsafdsfdasfj"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_create_walet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp40"
            android:layout_marginLeft="@dimen/dp12"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/deepskyblue"
            android:text="创建钱包"/>
        <TextView
            android:id="@+id/tv_import_walet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp40"
            android:layout_marginLeft="@dimen/dp12"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/gray_8f"
            android:text="导入钱包"/>

    </LinearLayout>

</LinearLayout>