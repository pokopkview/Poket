<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/include_title"/>


    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/rl_select_words"
        app:max_select="-1"
        android:background="#EFEFF0"
        android:layout_margin="@dimen/dp12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp140"/>


    <LinearLayout
        android:background="#EFEFF0"
        android:layout_gravity="right"
        android:gravity="center_vertical|right"
        android:id="@+id/bt_frush"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#E2EAFD"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/refrush"
            android:layout_width="@dimen/dp32"
            android:layout_height="@dimen/dp32" />
        <TextView
            android:paddingRight="@dimen/dp8"
            android:textSize="@dimen/sp18"
            android:text="刷新助记词"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_confrim_words"
        android:gravity="center"
        android:background="#E2EAFD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp18"
            android:text="请按顺序点击之前确认的助记词"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <com.zhy.view.flowlayout.TagFlowLayout
        android:paddingTop="@dimen/dp8"
        android:id="@+id/rl_words"
        app:max_select="-1"
        android:background="#E2EAFD"
        android:layout_margin="@dimen/dp12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp140"/>
    <Button
        android:textColor="@color/white"
        android:textSize="@dimen/sp18"
        android:layout_marginTop="@dimen/dp3"
        android:id="@+id/bt_confirm"
        android:background="@color/nagative_blue"
        android:text="下一步"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
