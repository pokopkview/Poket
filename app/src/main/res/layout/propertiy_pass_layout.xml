<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_top"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="@dimen/dp80"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="APT"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp34"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/sp16"
        android:id="@+id/tv_surplus"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp12"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_below="@id/tv_top"
        android:text="可用"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/sp16"
        android:text="0.000"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_below="@id/tv_surplus"
        android:id="@+id/tv_surplus_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textSize="@dimen/sp16"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_valuation"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp12"
        android:layout_marginRight="@dimen/dp32"
        android:layout_below="@id/tv_top"
        android:text="估值"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/sp16"
        android:layout_alignParentRight="true"
        android:text="$ 0.000"
        android:layout_marginRight="@dimen/dp32"
        android:layout_below="@id/tv_surplus"
        android:id="@+id/tv_valuation_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textSize="@dimen/dp20"
        android:textColor="@color/black"
        android:text="最近交易记录"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp32"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_below="@id/tv_surplus_count"
        android:id="@+id/tv_deal_recod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="@dimen/dp320"
        android:layout_centerHorizontal="true"
        android:src="@drawable/walet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:id="@+id/tv_get"
            android:background="@color/nagative_blue"
            android:gravity="center"
            android:text="收款"
            android:textSize="@dimen/sp18"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_send"
            android:textSize="@dimen/sp18"
            android:background="@color/gray"
            android:gravity="center"
            android:text="转账"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>
