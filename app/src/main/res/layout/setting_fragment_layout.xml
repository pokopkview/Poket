<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:background="@drawable/zichan02"
        android:layout_height="54dp">

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:textSize="@dimen/sp20"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:text="发现"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp180"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/faxian01"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_community"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp60"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp32"
                android:layout_height="@dimen/dp32"
                android:src="@drawable/vault3"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp12"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="社区"
                    android:textSize="@dimen/sp16"/>

                <!--android:textColor="@color/orange"-->
                <!--android:background="@drawable/pledge_bg"-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp3"
                    android:text="币圈新闻早知道"
                    android:textSize="@dimen/sp12"/>
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="@dimen/dp30"
            android:layout_gravity="center"
            android:background="@color/gainsboro"/>

        <LinearLayout
            android:id="@+id/ll_manage_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp60"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp32"
                android:layout_height="@dimen/dp32"
                android:src="@drawable/vault1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp12"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="理财"
                    android:textSize="@dimen/sp16"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_transparent"
                    android:padding="@dimen/dp3"
                    android:text="参与收入更多NMST"
                    android:textSize="@dimen/sp12"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp5"
        android:layout_gravity="center"
        android:background="@color/gainsboro"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp18"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginTop="@dimen/dp12"
        android:textStyle="bold"
        android:visibility="gone"
        android:text="最近"/>

    <LinearLayout
        android:id="@+id/ll_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp12"
            android:layout_marginRight="@dimen/dp15"
            android:src="@drawable/new01"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp15"
            android:textSize="@dimen/sp16"
            android:text="new+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp18"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginTop="@dimen/dp20"
            android:textStyle="bold"
            android:text="专栏"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp16"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginRight="@dimen/dp12"
            android:text="更多"/>
    </LinearLayout>

</LinearLayout>
